extends ../layout

block content
    div.container
        a.btn.btn-success(href='/admin/slide/edit', style='margin-bottom:15px;') 新增
        table.table.table-hover
            tr.active
                td 标题
                td 轮播图
                td 操作
            each item,key in slide_list
                tr
                    td= item.name
                    td
                        img(src='/'+item.slidepic alt="暂未上传图片" width="40px")
                    td
                        a.btn.btn-success(href='/admin/slide/edit?id='+item.id, style='margin-right:15px;') 修改
                        a.btn.btn-danger(href='/admin/slide/del?id='+item.id) 删除